<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.awj.ma63amiapp_admin.edit_BillUI"
    android:background="#ffffff">

    <TextView android:text="Edit Bill UI" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/aa"
        android:textSize="50sp"
        android:textStyle="italic"
        android:textColor="#000000"
        android:layout_alignBottom="@+id/backa"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:paddingRight="40dp"
        android:phoneNumber="true"
        android:paddingLeft="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/horizontal_line"
        android:layout_below="@+id/aa"
        android:layout_alignLeft="@+id/backa"
        android:layout_alignStart="@+id/backa" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/backa"
        android:src="@drawable/backarrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="330dp"
        android:layout_height="450dp"
        android:id="@+id/imageView"
        android:src="@drawable/billjbj"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

</RelativeLayout>
