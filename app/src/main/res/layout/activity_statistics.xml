<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.awj.ma63amiapp_admin.Statistics"
    android:background="#ffffff">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/back"
        android:src="@drawable/backarrow"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics     "
        android:id="@+id/textView62"
        android:textStyle="italic"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textIsSelectable="false"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/back"
        android:layout_toRightOf="@+id/back"
        android:layout_toEndOf="@+id/back" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/cstatistics"
        android:layout_below="@+id/back"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="60dp"
        android:src="@drawable/chart1"
        android:layout_marginLeft="50dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/sstatistics"
        android:layout_alignTop="@+id/cstatistics"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/chart2"
        android:layout_marginRight="50dp" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Customers"
        android:id="@+id/textView63"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textIsSelectable="true"
        android:gravity="center"
        android:layout_below="@+id/cstatistics"
        android:layout_alignRight="@+id/cstatistics"
        android:layout_alignEnd="@+id/cstatistics"
        android:layout_alignLeft="@+id/cstatistics"
        android:layout_alignStart="@+id/cstatistics" />

    <TextView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Sales"
        android:id="@+id/textView64"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textIsSelectable="true"
        android:gravity="center"
        android:layout_below="@+id/sstatistics"
        android:layout_alignRight="@+id/sstatistics"
        android:layout_alignEnd="@+id/sstatistics"
        android:layout_alignLeft="@+id/sstatistics"
        android:layout_alignStart="@+id/sstatistics" />
</RelativeLayout>
